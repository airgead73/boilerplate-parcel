{
  "name": "boilerplate-parcel",
  "version": "1.0.0",
  "description": "boilerplate for web apps using parcel",
  "source": "src/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "targets": {
    "default": {
      "distDir": "./public"
    }
  },
  "scripts": {
    "start": "rm -rf dev && parcel --open --port 3030 --dist-dir dev",
    "build": "parcel build",
    "build:local": "rm -rf public && parcel build",
    "server": "json-server --watch db.json --port 5000",
    "dev": "concurrently \"npm run server\" \"npm start\"",
    "clear": "rm -rf public"
  },
  "keywords": [
    "parcel"
  ],
  "author": "dan moneypenny",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.0.0",
    "http-proxy-middleware": "^2.0.1",
    "json-server": "^0.17.0",
    "parcel": "^2.2.1"
  }
}
